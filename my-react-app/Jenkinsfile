pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                print("Hello Worlld!")
                // Cloning repository
                git branch: 'main', url: 'https://github.com/Potterpurpp/potteraomfree.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                dir('my-react-app') {
                    sh 'npm install'
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning up workspace...'
            cleanWs() // Cleans up the workspace after the build
        }
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}